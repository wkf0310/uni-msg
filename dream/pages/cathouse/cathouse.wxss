/* pages/miaowu/miaowu.wxss */
/* top部 */
.top {
  width: 100vw;
  height: 140rpx;
  background-size: 100% 100%;
  display: flex;
  justify-content: space-between;
  background: #fff url("https://wap.lexuemiao.com/img/header_bar.72fa2a02.png") no-repeat;
background-size: 100% 100%;
}
.top-box{
  width: 100%;
  background-color: #fff;
  position: sticky;
  top: 0;
  left: 0;
  z-index: 2;
}
.top .log {
  width: 150rpx;
  height: 60rpx;
  margin-left: 40rpx;
  margin-top: 40rpx;
}

.top-right image {
  width: 40rpx;
  height: 50rpx;
  margin-right: 40rpx;
  margin-top: 40rpx;
}

/* tab部分 */
.tab-box {
  display: flex;
  justify-content: space-around;

  padding-bottom: 20rpx;
  box-sizing: border-box;
}

.tab-box text {
  text-align: center;
  width: 140rpx;
  padding: 10rpx 0;
  font-size: 32rpx;
}

.active {
  color: #f15c27;
  border-bottom: 8rpx solid #f15c27;
}

/* 滑动模块 */
.hua-box {
  /* width: 20000rpx; */
  display: flex;
  margin: 60rpx 0;
  padding: 0 10rpx;
}

.hua-item {
  width: 200rpx;
  height: 450rpx;
  margin: 0 12rpx;
}

.hua-item .img {
  border-radius: 20rpx;
}

.hua-item .img image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}

.hua-item view {
  font-size: 24rpx;
  margin: 20rpx 0;
  text-align: center;
}

.hua-item .title {
  color: #f15a24;
}

.hua-item .num {
  color: #999;
}

/* 发布 */
.release {
  width: 100%;
  padding: 4% 2%;
  box-sizing: border-box;
}

.release .release-top {
  /* height: 100rpx; */
  display: flex;
  justify-content: flex-start;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.release .left {
  width: 60%;
  display: flex;
}

.release .left .name-box {
  margin-left: 20rpx;
  font-size: 28rpx;
}

.release .left .name-box .time {
  color: #999;
  margin-top: 8rpx;
}

.release .left .img {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.release .left .v {
  position: absolute;
  right: -6rpx;
  bottom: -6rpx;
  width: 26rpx;
  height: 26rpx;
}

.release .left .img .to {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.right{
  width: 30%;
}
.release .release-top .right .guan {
  width: 120rpx;
  height: 52rpx;
  line-height: 52rpx;
  margin-top: 26rpx;
  float: right;
  color: #f15a24;
  background: rgba(241, 90, 36, .12);
  border-radius: 35rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: 500;
  margin-left: 280rpx;
}

.dian {
  float: right;
  margin-left: 10rpx;
  margin-top: 40rpx;
}

.dian text {
  background: #9fa3b0;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  float: left;
  margin-left: 8rpx;
}

.dian text:nth-of-type(2) {
  background: #424963;
}

/* 内容 */
.substance {
  padding:40rpx;
  box-sizing: border-box;
  font-size: 32rpx;
}
.substance .substance-title{
  margin: 20rpx 0 40rpx 0;
}
.substance .substance-img{
  width: 100%;
  display: flex;
}
.substance .substance-img image{
  width: 50%;
  height: 330rpx;
  margin-right: 20rpx;
  border-radius: 25rpx;
}

.content-box{
  width: 100%;
  padding: 4%; 
  box-sizing: border-box;
}
.content-box .top-txt{
  font-weight: 600;
  font-size: 44rpx;
  color: #424963;
  margin: 2% 0;
}

.content-box .pic-box{
  width: 100%;
  display: flex;
  align-items: center;
}
.pic{
  width: 35%;
}
.pic .left-pic{
  width: 100%;
  height: 160rpx;
  border-radius: 16rpx;
  vertical-align: middle;
}
.right-txt{
  flex: 1;
  font-size: 32rpx;
  padding-left: 20rpx;
  color: #424963;
  margin: 2% 0 0 0;
  display: -webkit-box;
    word-break: break-all;
    text-overflow:ellipsis;
    overflow: hidden;
    white-space: pre-line;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:3;
}

.guan-box{
  width: 100%;
  padding: 4% 6%;
  box-sizing: border-box;
}
.guan-box .guan-txt{
  width: 100%;
  font-size: 30rpx;
}
.guan-pic{
  width: 100%;
}
/* 尾部 */
.footer{
  padding: 40rpx 0;
  display: flex;
  justify-content: space-around;
  border-bottom: 20rpx solid #efefef;
  border-top: 2rpx solid #eee;
}
.footer view{
  display: flex;
  align-items: center;
  color: #ccc;
  font-size: 30rpx;
}
.footer view image{
  width: 40rpx;
  height: 35rpx;
  margin-right: 10rpx;
}
/* 定位 */
.miao{
  position: fixed;
  right: 20rpx;
  width: 150rpx;
  height: 150rpx;
  background: url('https://wap.lexuemiao.com/img/fawen.bd444e76.png') no-repeat top;
  background-size: 100% 100%;
  bottom: 10rpx;
}