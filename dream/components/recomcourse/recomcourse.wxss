/* components/recomcourse/recomcourse.wxss */
.tui-item {
    width: 100%;
    padding: 4%;
    box-sizing: border-box;
    box-shadow: 6rpx 4rpx 8rpx 4rpx #eee;
    border-radius: 6%;
    margin: 4% 0 8% 0;
    position: relative;
}

.tui-item .txt {
    background-color: rgb(250, 247, 247);
    color: rgb(112, 111, 111);
    display: inline;
    padding: 0 4%;
    box-sizing: border-box;
    border-radius: 20rpx;
    font-size: 24rpx;
    margin: 10rpx 10rpx 0 0;
}

.top-txt {
    position: absolute;
    top: 0;
    left: 0;
    background-color: #f15a24;
    color: white;
    padding: 1% 2%;
    font-size: 24rpx;
    box-sizing: border-box;
    border-top-left-radius: 30rpx;
    border-bottom-right-radius: 30rpx;
}
.pri-txt {
    color: #d60b0b;
}
.tui-item .fir-txt {
    font-size: 32rpx;
    color: rgb(65, 65, 65);
    margin:40rpx 0 20rpx 0;
}

.tui-item .sec-txt {
    margin: 8% 0;
    width: 100%;
    display: flex;
    align-items: center;
    font-size: 28rpx;
    color: gray;
}
.pic-box{
    width: 100%;
    display: flex;
}
.sec-txt image {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin: 0 1%;
}
.name-txt{
    margin-left: 6rpx;
}

.bot-free {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-top: 1px solid rgba(241, 241, 241, 0.849);
    padding: 4% 0 0 0;
    box-sizing: border-box;
}
.mian{
    display: flex;
    flex-direction: column;
}
.mian text{
    color: gray;
    font-size: 28rpx;
}
.mian text:nth-of-type(1){
    margin-bottom: 16rpx;
}
.free-txt{
    color: #409426;
}